</div>

<script>
		var a = 0;
		var b = 0;
        function totalPRICE(x){
            a=a+x;
            return a;
        }
        
        function openCART() {
            if(b==0){
                document.getElementById("user-cart").style.display= "block";
                return b=1;            
            }
            else if(b==1){
                document.getElementById("user-cart").style.display= "none";
                return b=0;            
            }
		}
				
</script></body></cart>